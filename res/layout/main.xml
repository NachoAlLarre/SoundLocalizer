                android:id="@+id/btnStart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Start" />

            <Button
                android:id="@+id/btnAbort"
                 android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="Abort" />
        </LinearLayout>
        
        			
        
                         
